                <br>
                <h4>{{f.nom}}</h4>
                <br>
                <h4>{{f.Chapitre}}</h4>
                <br>
                <p>{{f.Formules}}</p>
                <br>
                <p>{{f.Conceptcle}}</p>
            </div>
        </div>
